{
  "name": "textrun-npm",
  "version": "0.2.1",
  "license": "ISC",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist/**/*.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "clean": "rm -rf dist",
    "cuke": "cucumber-js --format=progress",
    "doc": "text-run static --format=summary && text-run dynamic --format=progress",
    "fix": "eslint --fix --ignore-pattern=dist/ . && prettier --write .",
    "lint": "prettier -l . && eslint --ignore-pattern=dist/ . && depcheck --config=../.depcheckrc",
    "unit": "env NODE_NO_WARNINGS=1 mocha --reporter=dot 'src/**/*.test.ts'"
  },
  "dependencies": {
    "colorette": "2.0.20",
    "text-runner-core": "^6.0.1"
  },
  "devDependencies": {
    "shared-cucumber-steps": "*",
    "text-runner": "^6.0.1",
    "textrun-action": "^0.2.1",
    "textrun-extension": "^0.2.1",
    "textrun-workspace": "^0.2.1",
    "tsx": "4.19.3"
  }
}
