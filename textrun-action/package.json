{
  "name": "textrun-action",
  "version": "0.2.1",
  "license": "ISC",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist/**/*.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "clean": "rm -rf dist",
    "doc": "text-run static --format=summary && text-run dynamic --format=progress",
    "fix": "eslint --fix --ignore-pattern=dist/ . && prettier --write . && sort-package-json --quiet",
    "lint": "prettier -l . && sort-package-json --check --quiet && eslint --ignore-pattern=dist/ . && depcheck --config=../.depcheckrc"
  },
  "dependencies": {
    "text-runner-core": "6.0.1"
  },
  "devDependencies": {
    "text-runner": "6.0.1",
    "tsx": "4.19.3"
  }
}
