{
  "name": "textrun-workspace",
  "version": "1.0.0",
  "description": "Text-Runner actions for the Text-Runner workspace",
  "license": "ISC",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist/**/*.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "clean": "rm -rf dist",
    "cuke": "cucumber-js --format=progress",
    "doc": "text-runner static --online --format=summary && text-runner dynamic --format=progress",
    "fix": "eslint --fix --ignore-pattern=dist/ . && prettier --write . && sort-package-json --quiet",
    "lint": "prettier -l . && sort-package-json --check --quiet && eslint --ignore-pattern=dist/ . && depcheck"
  },
  "dependencies": {
    "assert-no-diff": "3.0.6",
    "colorette": "2.0.20",
    "text-runner-core": "7.0.0"
  },
  "devDependencies": {
    "shared-cucumber-steps": "*",
    "text-runner": "7.0.0",
    "textrun-action": "0.2.1",
    "textrun-extension": "0.2.1",
    "tsx": "4.19.3"
  }
}
