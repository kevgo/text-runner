#!/usr/bin/env bash
set -e

if [ "$#" == "0" ]; then
  bin/lint
  bin/tests
  echo
  bin/cuke-api
  bin/cuke-cli
  echo
  echo
  bin/docs
else
  DEBUG='*,-express:*,-body-parser:*,-observable-process,-text-stream-search,-rails-delegate,-exorelay:*,-stylus:*' bin/cuke-api "$@"
  DEBUG='*,-express:*,-body-parser:*,-observable-process,-text-stream-search,-text-stream-accumulator,-rails-delegate,-exorelay:*,-stylus:*' bin/cuke-cli "$@"
fi
