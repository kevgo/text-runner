{
  "name": "textrun-make",
  "version": "0.2.1",
  "license": "ISC",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist/**/*.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "clean": "rm -rf dist",
    "cuke": "cucumber-js --format=progress",
    "doc": "text-runner static --format=summary && text-runner dynamic --format=progress",
    "fix": "eslint --fix --ignore-pattern=dist/ . && prettier --write . && sort-package-json --quiet",
    "lint": "prettier -l . && sort-package-json --check && eslint --ignore-pattern=dist/ . && depcheck --config=../.depcheckrc",
    "unit": "node --test --import tsx 'src/**/*.test.ts'"
  },
  "dependencies": {
    "colorette": "2.0.20",
    "text-runner-core": "6.0.1"
  },
  "devDependencies": {
    "shared-cucumber-steps": "*",
    "text-runner": "6.0.1",
    "textrun-action": "0.2.1",
    "textrun-extension": "0.2.1",
    "textrun-npm": "0.2.1",
    "textrun-workspace": "0.2.1",
    "tsx": "4.19.3"
  }
}
