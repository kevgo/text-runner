// configuration for the compiler: ignore tests for increased speed
// tests are type-checked and compiled when running the unit tests
{
  "extends": "./tsconfig.json",
  "exclude": ["./src/**/*.test.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false /* Generates corresponding '.d.ts' file. */,
    "declarationMap": false /* Generates a sourcemap for each corresponding '.d.ts' file. */,
    "incremental": false
  }
}
