{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["import", "typescript", "unicorn"],
  "categories": {
    "correctness": "warn",
    "pedantic": "warn",
    "perf": "warn",
    "style": "warn",
    "suspicious": "warn"
  },
  "settings": {},
  "rules": {
    "unicorn/prefer-optional-catch-binding": "off",
    "sort-imports": "off",
    "unicorn/no-null": "off"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.spec.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}
