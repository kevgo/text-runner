{
  "name": "textrun-make",
  "version": "0.2.1",
  "license": "ISC",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist/**/*.js"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "clean": "rm -rf dist",
    "cuke": "cucumber-js --format=progress",
    "doc": "text-runner --format=dot",
    "fix": "eslint --fix --ignore-pattern=dist/ . && dprint fmt && sort-package-json --quiet",
    "lint": "dprint check && sort-package-json --check --quiet && eslint --ignore-pattern=dist/ . && depcheck --config=../.depcheckrc",
    "unit": "node --test --import tsx 'src/**/*.test.ts'"
  },
  "dependencies": {
    "colorette": "2.0.20",
    "text-runner-core": "7.0.0"
  },
  "devDependencies": {
    "shared-cucumber-steps": "*",
    "text-runner": "7.0.0",
    "textrun-action": "0.2.1",
    "textrun-extension": "0.2.1",
    "textrun-npm": "0.2.1",
    "textrun-workspace": "0.2.1",
    "tsx": "4.19.3"
  }
}
